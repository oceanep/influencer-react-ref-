{
    "short_name": "influencer-react",
    "name": "Influencer React",
    "version": "1.0",
    "manifest_version": 2,
    "permissions": [
	"activeTab"
    ],
    "background": {
	"scripts": ["app/background.js"]
    },
    "browser_action": {},
    "content_scripts" : [
	{
	    "matches": ["*://*.instagram.com/*"],
	    "css": ["/static/css/app.css"],
	    "js": ["/static/js/content.js", "inject.js"]
	}
    ],
    "web_accessible_resources":[
	"/static/css/content.css",
	"script.js",
	"images/*.png",
	"/static/assets/influencer-logo1x.svg",
	"/static/assets/influencer-logo2x.png",
	"/static/assets/double-arrows@1x.svg",
	"/static/assets/double-arrows@2x.png",
	"/images/influencer-logo1x.svg",
	"/images/influencer-logo2x.png",
	"/images/double-arrows@1x.svg",
	"/images/double-arrows@2x.png",
	"images/*.jpg"
    ],
    "icons": {
	"16": "images/logo16.png",
	"32": "images/logo32.png",
	"48": "images/logo48.png",
	"128": "images/logo128.png"
    }
}
